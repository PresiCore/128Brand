rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de licencias
    match /licenses/{licenseId} {
      // Permitir leer y escribir si el usuario está autenticado
      // Idealmente validar que request.auth.uid == resource.data.userId, pero para inicio basta con auth
      allow read, write: if request.auth != null;
    }
    
    // Reglas para productos (Marketplace)
    match /products/{productId} {
      // Cualquiera puede leer los productos
      allow read: if true;
      allow write: if false;
    }
    
    // Reglas para usuarios
    match /users/{userId} {
      // Usuarios pueden leer y escribir sus propios datos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla por defecto (Denegar todo lo demás)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}